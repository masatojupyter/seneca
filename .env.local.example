# Database (Docker for local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/seneca
TIMESCALE_URL=postgresql://postgres:postgres@localhost:5433/seneca_ts

# NextAuth v5 (JWT only, no DB sessions)
AUTH_SECRET= # Generate with: openssl rand -base64 32
AUTH_URL=http://localhost:3000
AUTH_TRUST_HOST=true

# XRPL (Beta supports XRP only)
XRPL_NETWORK=testnet # Use testnet for development, mainnet for production
ENCRYPTION_KEY= # Generate with: openssl rand -base64 32 (AES-256 for wallet secrets)

# Email (SMTP configuration)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@seneca.com

# Exchange Rate APIs (USD base)
COINGECKO_API_KEY=
